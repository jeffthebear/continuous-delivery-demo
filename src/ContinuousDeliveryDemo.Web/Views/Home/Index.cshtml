@model HomeModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Todos</title>
</head>
    <body>
        <h1>Todos:</h1>
        <ul>
            @{ var i = 0; }
            @foreach (var todo in @Model.Todos)
            {
                <li>
                    @todo.Message
                    @Html.Partial("_DeleteTodo", Model.GetDeleteTodoModelWithContext(todo.Message), new ViewDataDictionary() {{ "Index", i }})                    
                </li>
            }
        </ul>
        @Html.Partial("_CreateTodo", Model.GetCreateTodoModelWithContext())
    </body>
</html>
